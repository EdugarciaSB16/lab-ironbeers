{{#each beer}}
<div class="container">
    <div class="card card-big-beer" style="max-height: 340px; width:500px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{this.image_url}}" alt="{{this.name}}" class="big-beer">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <span class="tag-line">{{this.tagline}}</span>
                    <p class="card-text">{{this.description}}</p>
                    <strong>Food Paring</strong>
                    <ul>
                        {{#each food_pairing as |food|}}
                        <li>{{food}}</li>
                        {{/each}}
                    </ul>
                    <strong>Brewers tips:</strong>
                    <p>{{this.brewers_tips}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}